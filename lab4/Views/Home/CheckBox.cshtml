
@{
    ViewData["Title"] = "CheckBox";
}

<h2>CheckBox</h2>
@if (ViewData.ContainsKey("textBoxValue"))
{
    <p style="font-weight:bold">IsSelected:</p>
    <p>@ViewData["textBoxValue"]</p>
}
else
{
    <form method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <div class="col-md-4">
                <p><input type="checkbox" name="value" value="True" />IsSelected</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
    </form>
}
