
@{
    ViewData["Title"] = "SignUp";
}

@if (ViewData.ContainsKey("firstStageIsComplete"))
{
    <h2>SignUp</h2>
    <form method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <div class="col-md-4">
                <label>Email</label>
                <input type="text" name="email" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Password</label>
                <input type="password" name="password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>Confirm password</label>
                <input type="password" name="confirmPassword" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <p><input type="checkbox" name="value" value="True" />Remember?</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" class="btn btn-primary" value="Complete sign up" />
            </div>
        </div>
    </form>
}
else if (ViewData.ContainsKey("secondStageIsComplete"))
{
    <h2>Sign up result</h2>
    <p>@ViewData["firstName"]</p>
    <p>@ViewData["lastName"]</p>
    <p>@ViewData["day"] @ViewData["month"] @ViewData["year"]</p>
    <p>@ViewData["gender"]</p>
    <p>@ViewData["email"]</p>
    <p>@ViewData["password"]</p>
}
else
{
    <h2>SignUp</h2>
    <form method="post" class="form-horizontal" role="form">
        <div class="form-group">
