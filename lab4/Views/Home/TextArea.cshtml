
@{
    ViewData["Title"] = "TextArea";
}

<h2>TextArea</h2>
@if (ViewData.ContainsKey("textAreaValue"))
{
    <p style="font-weight:bold">Text:</p>
    <p>@ViewData["textAreaValue"]</p>
}
else
{
    <form method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <div class="col-md-4">
                <label>Text</label>
                <textarea name="value" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" class="btn btn-default" value="Submit" />
            </div>
        </div>
    </form>
}
